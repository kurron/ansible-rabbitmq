# change the IP to point to the desire target machine
targetserver ansible_ssh_host=192.168.1.33 ansible_ssh_port=22

[all:vars]
# specify a pre-exiting folder that is an XFS file system
dbPath=/var/ronbo

# the storage engine to use: wiredTiger or mmapv1 
engine=wiredTiger

# how much RAM, in GB, is MongoDB allowed to acquire for its own use
cacheSizeGB=3

# set to 1 in a test setting, 0 for a production setting
notablescan=1
